index 74d3dfbf..5cc007c6 100644
--- a/boot/zephyr/app.overlay
+++ b/boot/zephyr/app.overlay
@@ -1,3 +1,20 @@
+&flash0 {
+	/delete-node/ partitions;
+	partitions {
+		compatible = "fixed-partitions";
+		#address-cells = < 0x1 >;
+		#size-cells = < 0x1 >;
+		boot_partition: partition@0 {
+			label = "catboot";
+			reg = < 0x0 0x10000 >;
+		};
+		slot0_partition: partition@10000 {
+			label = "image-0";
+			reg = < 0x10000 0xF0000 >;
+		};
+	};
+};
+
 / {
 	chosen {
 		zephyr,code-partition = &boot_partition;
